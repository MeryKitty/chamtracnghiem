<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/questionId"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/questionAnswers"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"/>
    
    <RadioGroup
        android:id="@+id/questionAnswers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/questionId"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="3">
        
        <RadioButton
            android:id="@+id/answerA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/questionAnswers"
            app:layout_constraintRight_toRightOf="@id/answerB"
            app:layout_constraintBottom_toBottomOf="@id/questionAnswers"
            app:layout_constraintTop_toTopOf="@id/questionAnswers"/>

        <RadioButton
            android:id="@+id/answerB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/answerA"
            app:layout_constraintRight_toRightOf="@id/answerC"
            app:layout_constraintBottom_toBottomOf="@id/questionAnswers"
            app:layout_constraintTop_toTopOf="@id/questionAnswers"/>

        <RadioButton
            android:id="@+id/answerC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/answerB"
            app:layout_constraintRight_toRightOf="@id/answerD"
            app:layout_constraintBottom_toBottomOf="@id/questionAnswers"
            app:layout_constraintTop_toTopOf="@id/questionAnswers"/>

        <RadioButton
            android:id="@+id/answerD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/answerC"
            app:layout_constraintRight_toRightOf="@id/questionAnswers"
            app:layout_constraintBottom_toBottomOf="@id/questionAnswers"
            app:layout_constraintTop_toTopOf="@id/questionAnswers"/>

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
