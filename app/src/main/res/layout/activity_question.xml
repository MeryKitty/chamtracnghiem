<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity">

    <TextView
        android:id="@+id/questionActTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FCEA00"
        android:fontFamily="@font/montserrat_bold"
        android:text="DANH SÁCH CÂU HỎI"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#014F8E"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/questionActContent"/>
    
    <ListView
        android:id="@+id/questionActContent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/submit"
        app:layout_constraintTop_toBottomOf="@id/questionActTitle"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FCEA00"
        android:fontFamily="@font/montserrat_bold"
        android:text="XÁC NHẬN"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#014F8E"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionActContent"/>


</androidx.constraintlayout.widget.ConstraintLayout>